<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/text_color_light"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            style="@style/description_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="@string/seed.action.sowing.period" />

        <LinearLayout
            android:id="@+id/layoutInputSowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_line_action"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/description_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min" />

            <DatePicker
                android:id="@+id/IdSeedDateSowingPlanningMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <TextView
                style="@style/description_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Max" />

            <DatePicker
                android:id="@+id/IdSeedDateSowingPlanningMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            style="@style/description_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutInputSowing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:text="@string/seed.action.picking.period" />

        <LinearLayout
            android:id="@+id/layoutInputHarvesting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:background="@drawable/bg_line_action"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/description_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min" />

            <DatePicker
                android:id="@+id/IdSeedDateHarvestPlanningMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <TextView
                style="@style/description_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Max" />

            <DatePicker
                android:id="@+id/IdSeedDateHarvestPlanningMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>