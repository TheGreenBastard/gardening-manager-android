<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="31001" android:versionName="0.31.1-SNAPSHOT" package="org.gots">

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" android:required="false"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- STORE WEATHER CACHE AND VEGETABLE PHOTOS -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- REMINDER DOING GARDENG TASK -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- LOGIN WITH GARDENING MANAGER SERVER USING LOCAL ACCOUNTS -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS"/>

    <uses-feature android:name="android.hardware.camera" android:required="false"/>

    <uses-permission android:name="com.android.vending.BILLING"/>
    <!--
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
           android:debuggable="false"
    -->

    <application android:debuggable="true" android:icon="@drawable/launcher" android:label="@string/app_name" android:theme="@style/Theme.Styled">
        <activity android:label="@string/app_name" android:name=".ui.SplashScreenActivity" android:theme="@style/Theme.Styled">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.MyMainGarden" android:theme="@style/Theme.Styled" android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".ui.DashboardActivity" android:theme="@style/Theme.Styled">
        </activity>
        <activity android:name=".ui.AllotmentActivity"/>
        <activity android:name=".ui.SeedActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.VendorListActivity"/>
        <activity android:name=".ui.ProfileActivity" android:theme="@style/Theme.Styled" android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity android:name=".ui.ProfileCreationActivity" android:theme="@style/Theme.Styled" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.ListActionActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.ActionActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.AboutActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.WebHelpActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.TutorialActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.TabSeedActivity" android:theme="@style/Theme.Styled" android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".ui.WebViewActivity"/>
        <activity android:name=".ui.HutActivity" android:theme="@style/Theme.Styled" android:uiOptions="splitActionBarWhenNarrow" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".inapp.BuyPremiumActivity" android:theme="@style/Theme.Styled" android:uiOptions="splitActionBarWhenNarrow"/>
        <activity android:name=".ui.MySeedsListActivity"/>
        <activity android:name=".ui.MySeedsListFirstTimeActivity"/>
        <activity android:name=".ui.NewSeedActivity" android:theme="@style/Theme.Styled" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.AccountList" android:theme="@style/Theme.Styled"/>
        <activity android:name=".authentication.AuthenticationActivity" android:theme="@style/Theme.Styled"/>
        <activity android:name=".ui.LoginActivity" android:theme="@style/Theme.Styled">
            <intent-filter>
                <data android:host="my.gardening-manager.com" android:path="/login" android:scheme="http"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.FirstLaunchActivity" android:theme="@style/Theme.Styled"/>
        <activity android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" android:name="com.google.ads.AdActivity"/>
        <activity android:name=".ui.PreferenceActivity" android:theme="@style/Theme.Styled"/>
        <!--
        <provider
        android:authorities="org.gots.providers.seeds
        android:name="org.gots.providers.SeedSQLite" />
        -->
        <provider android:authorities="org.gots.providers.seeds" android:label="@string/dashboard.hut.name" android:name="org.gots.provider.SeedsContentProvider" android:syncable="true"/>
        <provider android:authorities="org.gots.providers.garden" android:label="@string/dashboard.profile.name" android:name="org.gots.provider.GardenContentProvider" android:syncable="true"/>
        <provider android:authorities="org.gots.providers.actions" android:label="@string/dashboard.actions.name" android:name="org.gots.provider.ActionsContentProvider" android:syncable="true"/>
        <provider android:authorities="org.gots.providers.allotment" android:label="@string/dashboard.allotments.name" android:name="org.gots.provider.AllotmentContentProvider" android:syncable="true"/>

        <receiver android:name=".service.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".action.service.ActionTODOBroadcastReceiver">
        </receiver>
        <receiver android:name=".seed.service.SeedBroadcastReceiver">
        </receiver>
        <receiver android:name=".garden.GardenManager">
            <intent-filter android:priority="100">
                <action android:name="org.gots.broadcast.BroadCastMessages.CONNECTION_SETTINGS_CHANGED"/>
            </intent-filter>
        </receiver>

        <service android:name=".action.service.ActionNotificationService"/>
        <service android:name=".weather.service.WeatherUpdateService"/>
        <service android:name=".seed.service.SeedUpdateService"/>
        <service android:exported="true" android:name=".seed.service.SeedSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_adapter_seed"/>
        </service>
        <service android:exported="true" android:name=".garden.service.GardenSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_adapter_garden"/>
        </service>
        <service android:exported="true" android:name=".allotment.service.AllotmentSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_adapter_allotment"/>
        </service>
        <service android:exported="true" android:name=".action.service.ActionsSyncService">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_adapter_actions"/>
        </service>
        <service android:name=".allotment.service.AllotmentNotificationService"/>
        <service android:name=".allotment.service.ProfilNotificationService"/>
        <service android:name=".authentication.GotsAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator"/>
        </service>
    </application>

</manifest>