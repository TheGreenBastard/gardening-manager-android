<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_line_action_selector"
    android:padding="5dp">


    <TextView
        android:id="@+id/buttonPrice"
        style="@style/buttonPurchase"

        android:layout_below="@+id/imageViewPurchaseItem"
        android:layout_centerHorizontal="true"
        android:text="Price"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewPurchaseItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Item"

        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageViewPurchaseItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/gots_feature"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewPurchaseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPurchaseItem"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Description"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="8dp" />

    <ImageView
        android:id="@+id/imageViewPurchaseState"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_validate" />
</RelativeLayout>