<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_line_action_selector"
    android:padding="5dp">


    <TextView
        android:id="@+id/buttonPrice"
        style="@style/buttonPurchase"

        android:text="Price"
        android:layout_below="@+id/imageViewPurchaseItem"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewPurchaseItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Item" />

    <ImageView
        android:id="@+id/imageViewPurchaseItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gots_feature_parrot"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewPurchaseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPurchaseItem"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Description"
        android:textIsSelectable="false"
        android:textSize="8dp" />
</RelativeLayout>