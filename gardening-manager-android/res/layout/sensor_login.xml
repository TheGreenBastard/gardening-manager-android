<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_line_action"
    android:padding="7dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/text_color_light"
        android:orientation="vertical"
        android:padding="7dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/flowerpower_blue" />

        <EditText
            android:id="@+id/idParrotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idParrotLogin"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/login.password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/idParrotLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/login.login"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/idButtonParrotLogin"
            style="@style/buttonRed"
            android:layout_below="@+id/idParrotPassword"
            android:layout_centerHorizontal="true"
            android:text="@string/login.connect" />

        <Button
            android:id="@+id/idButtonCreateGarden"
            style="@style/buttonGreen"
            android:layout_below="@+id/idButtonParrotLogin"
            android:layout_centerHorizontal="true"
            android:text="@string/sensor.buy" />
    </RelativeLayout>

</ScrollView>