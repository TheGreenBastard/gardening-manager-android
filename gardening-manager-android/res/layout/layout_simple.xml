<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.gots"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/text_color_light"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/globalContainer"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="verticagit difl">


        <FrameLayout
            android:id="@+id/resumeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <FrameLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idAdsTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/idFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/globalContainer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fab_addButtonColorNormal="@color/text_color_dark"
        app:fab_addButtonColorPressed="@color/action_warning_color"
        fab:fab_labelStyle="@style/fab_label"
        fab:fab_labelsPosition="left" />

    <RelativeLayout
        android:id="@+id/layoutNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_line_action"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_above="@+id/idAdsTop"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageViewRefresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bt_update_green"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewProgress"
            style="@style/NotificationDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imageViewRefresh"
            android:layout_toStartOf="@+id/imageViewRefresh"
            android:gravity="center"
            android:text="@string/gots.loading"
             />
    </RelativeLayout>
</RelativeLayout>