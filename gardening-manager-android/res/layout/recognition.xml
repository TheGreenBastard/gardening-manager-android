<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_light">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_recognition_top" />

    <TextView
        android:id="@+id/textViewAction"
        style="@style/TitleResumeFragment"
        android:layout_alignLeft="@+id/imageViewTop"
        android:layout_alignTop="@+id/imageViewTop"
        android:text="@string/plant_recognition"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonActions"
        style="@style/buttonGreenDashboard"
        android:layout_alignRight="@+id/imageViewTop"
        android:layout_alignTop="@+id/textViewAction"
        android:text="Take a picture" />


    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewTop"
        android:src="@drawable/no_picture" />

    <ListView

        android:id="@+id/listViewPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/imageViewPhoto"
        android:layout_toEndOf="@+id/imageViewPhoto"
        android:layout_toRightOf="@+id/imageViewPhoto" />

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognition in process"
        android:visibility="gone"
        android:layout_alignBottom="@+id/imageViewPhoto"
        android:layout_toRightOf="@+id/imageViewPhoto"
        android:layout_toEndOf="@+id/imageViewPhoto" />


</RelativeLayout>