<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_line_selector"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/sensorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/flowerpower_brown" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sensorImage"
        android:layout_centerHorizontal="true"
        android:background="#80444444"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/sensorLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NickName"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/sensorLocationPlantAssignedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlantAssignedDate"
            android:textColor="@color/white"
            android:textSize="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensorLayoutStatus"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/action_ok_color"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>