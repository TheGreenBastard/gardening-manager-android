    <style name="description_content">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="description_error">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/action_error_color</item>
    </style>

    <style name="button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="buttonRed" parent="button">
        <item name="android:background">@drawable/bg_line_action_selector</item>
    </style>

    <style name="buttonGreen" parent="button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/selector_text_brown</item>
    </style>

    <style name="buttonPurchase">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="buttonGreenDashboard" parent="button">
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="description_increment">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="fab_label">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@color/text_color_dark</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="seed_specie">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="seed_variety_description">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="seed_variety">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="seed_family_description">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="seed_family">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_top</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="@android:windowEnterAnimation">@anim/pump_bottom</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="CustomTheme" parent="@android:style/Theme">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:background">@drawable/tab_green</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:alwaysDrawnWithCache">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
    </style>

    <style name="CustomDialogTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">@drawable/bg_round_corner_top</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomDialogContent">
        <item name="android:background">@color/text_color_light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.Styled" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Styled.TabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/Widget.Styled.TabBar</item>
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.AutoCompleteTextViewLight
        </item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItem</item>
        <item name="spinnerDropDownItemStyle">@style/DropDownItem</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav</item>
        <item name="actionDropDownStyle">@style/DropDownNav</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:actionModeBackground">@drawable/contextual_bar_top</item>
        <item name="android:actionModeSplitBackground">@drawable/contextual_bar_bottom</item>
        <item name="android:colorPrimaryDark">@color/text_color_dark</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SpinnerGarden" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:background">@color/text_color_dark</item>
        <item name="background">@color/text_color_dark</item>
        <item name="android:alpha">0.9</item>
    </style>


    <style name="DropDownNav" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar"></style>

    <style name="DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/selector_drawer</item>
        <item name="background">@color/text_color_light</item>
        <item name="android:textAppearance">
            @style/Custom.TextAppearance.Sherlock.Widget.TextView.DropDownItem
        </item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Custom.TextAppearance.Sherlock.Widget.TextView.DropDownItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/text_color_dark</item>
        <item name="android:titleTextStyle">@style/Widget.Styled.TitleTextStyle</item>
        <item name="android:backgroundSplit">@drawable/tab_divider</item>
    </style>

    <style name="Widget.Styled.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="Widget.Styled.TabBar" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/selector_tab</item>
        <item name="android:divider">@drawable/tab_divider</item>
    </style>

    <style name="Widget.Styled.TabTextStyle" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">13dp</item>
        <item name="android:divider">@drawable/tab_divider</item>
        <item name="android:showDividers">middle</item>
